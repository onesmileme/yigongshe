<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/original_detail_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/original_detail_title_relativelayout"
        layout="@layout/common_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_titlebar_height"></include>

    <RelativeLayout
        android:id="@+id/original_detail_bottom_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#f5f5f5"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/original_detail_bottom_comment_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ececec"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/original_detail_bottom_comment_emoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/original_detail_emoji" />

                <TextView
                    android:id="@+id/original_detail_bottom_comment_send"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:text="发送"
                    android:textColor="#333333"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/original_detail_bottom_comment_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@id/original_detail_bottom_comment_send"
                    android:layout_toRightOf="@id/original_detail_bottom_comment_emoji"
                    android:background="@drawable/common_edit_text_background"
                    android:gravity="center_vertical" />

            </RelativeLayout>

            <com.weikan.app.face.FaceView
                android:id="@+id/original_detail_faceview"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:visibility="gone">

            </com.weikan.app.face.FaceView>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/original_detail_bottom_mixed_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/original_detail_comment_edittext"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/original_detail_bottom_right_linearlayout"
                android:background="@drawable/common_edit_text_background"
                android:imeOptions="actionGo"
                android:text="" />

            <LinearLayout
                android:id="@+id/original_detail_bottom_right_linearlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/original_detail_bottom_comment_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/original_detail_bottom_comment"
                    android:gravity="center"
                    android:text="11"
                    android:textColor="#a0a0a0"
                    android:textSize="10dp" />

                <ImageView
                    android:id="@+id/original_detail_bottom_praise_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/original_detail_bottom_praise" />

                <ImageView
                    android:id="@+id/original_detail_bottom_share_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/original_detail_bottom_share" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/original_detail_bottom_relativelayout"
        android:layout_below="@id/original_detail_title_relativelayout">

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/original_detail_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:listSelector="@android:color/transparent" />

        <View
            android:id="@+id/detail_none"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</RelativeLayout>