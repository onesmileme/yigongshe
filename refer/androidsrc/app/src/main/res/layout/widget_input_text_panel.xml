<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_smoke"
    >
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"

                android:background="@drawable/input_bg">

            <EditText
                    android:id="@+id/et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入~"
                    android:textColorHint="#999999"
                    android:textSize="13sp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
            />

            <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"

                    android:src="@drawable/icon_close"
                    android:layout_gravity="right|center_vertical"

                    android:visibility="gone"
                    tools:visibility="visible"
            />
        </FrameLayout>

        <Button
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"

                android:text="确定"
                android:textColor="#333333"
                android:textSize="17sp"
                android:background="@android:color/transparent"
        />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_colors"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:background="@color/white_smoke"
    >
        <!-- 白色 -->
        <com.weikan.app.original.widget.TextColorButtonView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:text_color_str="#ffffff"
        />

        <!-- 黑色 -->
        <com.weikan.app.original.widget.TextColorButtonView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:text_color_str="#000000"
        />

        <!-- 绿色 -->
        <com.weikan.app.original.widget.TextColorButtonView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:text_color_str="#008000"
        />

        <!-- 红色 -->
        <com.weikan.app.original.widget.TextColorButtonView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:text_color_str="#ff0000"
        />

        <!-- 黄色 -->
        <com.weikan.app.original.widget.TextColorButtonView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:text_color_str="#ffff00"
        />

        <!-- 蓝色 -->
        <com.weikan.app.original.widget.TextColorButtonView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:text_color_str="#0000ff"
        />

        <!-- 粉色 -->
        <com.weikan.app.original.widget.TextColorButtonView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:text_color_str="#ffc0cb"
        />

    </LinearLayout>

</LinearLayout>
