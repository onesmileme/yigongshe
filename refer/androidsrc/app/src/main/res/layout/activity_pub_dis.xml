<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/titlebar"
        layout="@layout/common_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_titlebar_height" />

    <ScrollView
        android:id="@+id/sv_pub_dis"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_bottom"
        android:layout_below="@+id/titlebar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/ed_pub_dis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:gravity="left|top"
                android:hint="这一刻想说的..."
                android:minHeight="50dp"
                android:textColorHighlight="#fc461e"
                android:textColorHint="#b5b5b5"
                android:textSize="14sp" />

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ed_pub_dis"
                android:layout_marginRight="4dp"
                app:alignContent="flex_start"
                app:alignItems="flex_start"
                app:flexWrap="wrap">

                <ImageView
                    android:id="@+id/iv_pub_dis_photo0"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pub_dis_image" />

                <ImageView
                    android:id="@+id/iv_pub_dis_photo1"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pub_dis_image" />

                <ImageView
                    android:id="@+id/iv_pub_dis_photo2"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pub_dis_image" />


                <ImageView
                    android:id="@+id/iv_pub_dis_photo3"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pub_dis_image" />

                <ImageView
                    android:id="@+id/iv_pub_dis_photo4"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pub_dis_image" />

                <ImageView
                    android:id="@+id/iv_pub_dis_photo5"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pub_dis_image" />


                <ImageView
                    android:id="@+id/iv_pub_dis_photo6"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pub_dis_image" />

                <ImageView
                    android:id="@+id/iv_pub_dis_photo7"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pub_dis_image" />

                <ImageView
                    android:id="@+id/iv_pub_dis_photo8"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pub_dis_image" />
            </com.google.android.flexbox.FlexboxLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="10dp">
        <GridView
            android:id="@+id/gv_wenyou_pub_group"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="22dp"
            android:numColumns="4"
            android:horizontalSpacing="6dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/fbl_wenyou_pub_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed_pub_dis"
            android:layout_marginRight="4dp"
            android:paddingBottom="8dp"
            app:alignContent="flex_start"
            app:alignItems="flex_start"
            app:flexWrap="wrap" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/time_list_line" />

        <RelativeLayout
            android:id="@+id/rl_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_face"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="16dip"
                android:layout_marginTop="12dp"
                android:src="@drawable/ib_face_selector" />

            <ImageView
                android:id="@+id/btn_pic_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dip"
                android:layout_toRightOf="@+id/btn_face"
                android:src="@drawable/ib_pic_selector" />
        </RelativeLayout>

        <com.weikan.app.face.FaceView
            android:id="@+id/wenyou_pub_faceview"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:visibility="gone">

        </com.weikan.app.face.FaceView>
    </LinearLayout>
</RelativeLayout>