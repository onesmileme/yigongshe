        <RelativeLayout
            android:id="@+id/time_and_zan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_share_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/avatar"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/create_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#777777"
                android:textSize="12sp"
                tools:text="1分钟前" />

            <TextView
                android:id="@+id/tv_wenyou_item_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/create_at"
                android:background="@drawable/wenyou_list_tag_bg"
                android:textColor="#fc461e"
                android:textSize="12sp"
                tools:text="#美腿大赛" />


            <LinearLayout
                android:id="@+id/comment"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingTop="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:src="@drawable/dis_item_comm_selector" />

                <TextView
                    android:id="@+id/comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:textColor="#777777"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/like"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/comment"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/like_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:src="@drawable/dis_item_zan_selector" />

                <TextView
                    android:id="@+id/like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:textColor="#777777"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/share"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/like"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingTop="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:src="@drawable/dis_item_share_selector" />

                <TextView
                    android:id="@+id/share_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/medium"
                    android:gravity="center_vertical"
                    android:textColor="#777777"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>


        </RelativeLayout>

        <include
            layout="@layout/discuss_bottom_comment_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_and_zan"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"

            android:layout_marginTop="10dp" />
    </RelativeLayout>


</LinearLayout>