<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
        <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/icon_share_qq"
                android:layout_centerVertical="true"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/iv_avatar"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true">

            <TextView
                    android:id="@+id/tv_oa_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="八卦成长协会"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginBottom="5dp"/>

            <TextView
                    android:id="@+id/tv_ofc_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信号：Guanaibgxh"
                    android:textColor="#999999"
                    android:textSize="12sp"/>


        </LinearLayout>

        <TextView
                android:id="@+id/tv_synced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="已同步"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:visibility="gone"/>

        <CheckBox
                android:id="@+id/cb_sync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:button="@drawable/checkbox_select_oa"
                />
    </RelativeLayout>

</LinearLayout>