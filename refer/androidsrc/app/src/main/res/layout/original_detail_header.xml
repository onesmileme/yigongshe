<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/rl_ori_detail_head_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
            android:visibility="gone">

        <com.weikan.app.widget.roundedimageview.CircleImageView
                android:id="@+id/original_detail_avatar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:visibility="visible"
                android:src="@drawable/user_default"/>

        <TextView
            android:id="@+id/original_detail_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/original_detail_avatar"
            android:text=""
            android:textColor="#748DA5" />

        <TextView
            android:id="@+id/original_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="刚刚"
            android:textColor="#aaaaaa"
            android:textSize="12dp" />
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/ll_original_detail_header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="22sp"
            android:textColor="#333333"
            />
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#888888"
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textColor="#888888"
                android:singleLine="true"
                android:ellipsize="end"
               />
        </LinearLayout>
    </LinearLayout>


    <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f2f2f2"
        android:visibility="gone"/>

    <RelativeLayout
            android:id="@+id/rl_pics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            tools:visibility="visible">
        <TextView
                android:id="@+id/tv_pics_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="创意列表"
            android:visibility="gone"
        />

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_pics"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_gravity="bottom"
                android:layout_below="@+id/tv_pics_title"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                tools:listitem="@layout/widget_tweet_inno_list_item_view"
        />

    </RelativeLayout>


    <View
        android:id="@+id/original_pics_divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f2f2f2"
        android:visibility="gone"
    />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/original_detail_praise"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/original_detail_praise_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/original_praise" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/original_detail_praise_right"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="#999999"
            android:lineSpacingExtra="5dp"
            android:layout_toRightOf="@id/original_detail_praise_left"
            android:text="" />
    </RelativeLayout>

    <View
            android:id="@+id/original_praise_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e5e5e5"/>

    <LinearLayout
            android:id="@+id/ll_ori_detail_head_pinglun"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
            android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/original_comment" />

        <TextView
            android:id="@+id/original_detail_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="评论（）"
            android:textSize="12dp"
            android:textColor="#333333"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"

        android:background="#e5e5e5"></View>

</LinearLayout>