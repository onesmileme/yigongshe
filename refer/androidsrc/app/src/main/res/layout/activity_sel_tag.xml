<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        android:fitsSystemWindows="true">

    <include
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_titlebar_height"
            layout="@layout/common_title_bar" />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f5f5">

        <ListView
                android:id="@+id/lv_tag_select"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:choiceMode="singleChoice"
                android:background="@color/white"/>

        <TextView
                android:id="@+id/tv_sel_tag_hind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择标签"
                android:textSize="13sp"
                android:textColor="#999999"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/lv_tag_select"/>


        <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/fl_tag_select"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_sel_tag_hind"
                android:layout_alignLeft="@+id/tv_sel_tag_hind"
                android:layout_marginTop="20dp"
                app:flexWrap="wrap"
                app:alignItems="flex_start"
                app:alignContent="flex_start"
                app:paddingStart="20dp"
                app:paddingEnd="10dp">

        </com.google.android.flexbox.FlexboxLayout>

    </RelativeLayout>

</LinearLayout>