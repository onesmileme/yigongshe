<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f0eff4"
        android:fitsSystemWindows="true">

    <include
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_titlebar_height"
            layout="@layout/common_title_bar"/>

    <android.support.design.widget.TabLayout
            android:id="@+id/tpi_system_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextAppearance="@style/SystemMsgTabTextStyle"
            app:tabIndicatorColor="#FF333333"
            app:tabSelectedTextColor="#FF333333"
            app:tabTextColor="#FF999999"
            app:tabMode="fixed"
            app:tabGravity="center"
            />

    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="#e5e5e5" />

    <android.support.v4.view.ViewPager
            android:id="@+id/vp_system_msg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

</LinearLayout>