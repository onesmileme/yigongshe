<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:fitsSystemWindows="true"
             android:background="@android:color/transparent">

    <View
            android:id="@+id/text_dialog_cancel_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <View
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:background="@drawable/common_round_corner_background_black"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

            <ProgressBar
                    android:id="@+id/loading_dialog_progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="@android:style/Widget.ProgressBar"/>

            <ImageView
                    android:id="@+id/loading_dialog_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

        </FrameLayout>

        <TextView android:id="@+id/loading_dialog_text_view"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_gravity="center_horizontal"
                  android:textColor="#ffffff"
                  android:textSize="14dp"/>

    </LinearLayout>

</FrameLayout>