<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    xmlns:snap="http://schemas.android.com/tools"
    android:layout_width="190dp"
    android:layout_height="50dp"
    android:background="#00000000">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/gift_background"
    android:layout_centerVertical="true">
    <com.weikan.app.widget.roundedimageview.CircleImageView
        android:id="@+id/user_head"
        android:layout_width="38dp"
        android:layout_height="38dp"
        tools:border_width="1dp"
        tools:border_color="@color/white"/>
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/user_head"
        android:layout_marginRight="50dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="8dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="1111"/>
    <TextView
        android:id="@+id/gift_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/user_head"
        android:layout_marginRight="50dp"
        android:textColor="#fdf652"
        android:layout_marginLeft="8dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="1111"
        android:layout_below="@+id/username"/>
</RelativeLayout>
    <ImageView
        android:id="@+id/gift"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/action_btn"/>
</RelativeLayout>