<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/mine_item_bg_selector">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <com.weikan.app.widget.roundedimageview.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/user_default"/>
        <ImageView
                android:id="@+id/iv_kanbar_lock"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignRight="@+id/iv_avatar"
                android:layout_alignBottom="@+id/iv_avatar"
                android:src="@drawable/icon_bar_lock"
                android:visibility="gone"
                tools:visibility="visible"/>

        <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_avatar"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                tools:text="我是谁"
                android:textSize="15sp"/>


        <ImageView
                android:id="@+id/iv_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/attention_normal"/>


    </RelativeLayout>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/commonbg"/>
</LinearLayout>