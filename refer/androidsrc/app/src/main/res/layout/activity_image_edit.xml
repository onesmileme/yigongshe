<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:fitsSystemWindows="true">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:background="@color/image_edit_title_bar"
        >
            <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_back"
            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

            <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"

                    android:text="确定"
                    android:textSize="17sp"
                    android:textColor="@color/white"
            />
        </LinearLayout>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/image_edit_bg">

            <com.weikan.app.original.widget.PictureOperationView
                    android:id="@+id/fl_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/black"
            >

                <ImageView
                        android:id="@+id/iv_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                />
            </com.weikan.app.original.widget.PictureOperationView>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_pics"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:background="@color/black"
                    android:visibility="gone"
                    tools:listitem="@layout/widget_material_picture_view"
            />
        </FrameLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@color/image_edit_bottom_bar">

            <TextView
                    android:id="@+id/tv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="5dp"

                    android:text="文字"
                    android:textSize="10sp"

                    android:gravity="center_horizontal"

                    android:textColor="@color/white"
                    android:drawableTop="@drawable/ic_tab_text_active"

            />

            <TextView
                    android:id="@+id/tv_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="5dp"

                    android:text="图片"
                    android:textSize="10sp"

                    android:gravity="center_horizontal"

                    android:textColor="@color/white"
                    android:drawableTop="@drawable/ic_tab_photo_active"
            />
        </LinearLayout>
    </LinearLayout>

    <View
            android:id="@+id/v_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88000000"
            android:visibility="gone"
    />

    <com.weikan.app.original.widget.InputTextPanelView
            android:id="@+id/input_text_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:visibility="gone"
    />
</FrameLayout>