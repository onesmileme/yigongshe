<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants">

    <com.weikan.app.widget.roundedimageview.RoundedImageView
        android:id="@+id/original_comment_imageview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ib_face" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/original_comment_imageview"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/original_comment_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#aaaaaa"
                android:textSize="12dp"
                android:layout_alignParentLeft="true"
                android:text=""
                    android:singleLine="true"/>

            <TextView
                    android:id="@+id/original_comment_reply_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/original_comment_nick_name"
                    android:layout_marginLeft="3dp"
                    android:textColor="#333333"
                    android:textSize="12dp"
                    android:text="回复："
                    android:visibility="gone"/>

            <TextView
                    android:id="@+id/original_comment_reply_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/original_comment_reply_title"
                    android:layout_marginLeft="3dp"
                    android:textColor="#448aca"
                    android:textSize="12dp"
                    android:text=""
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:visibility="gone"/>

            <TextView
                android:id="@+id/original_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="#aaaaaa"
                android:textSize="12dp"
                android:text="11" />
        </RelativeLayout>

        <TextView
            android:id="@+id/original_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22"
            android:textSize="15dp"
            android:textColor="#333333"
            android:layout_marginTop="10dp" />

        <View
            android:id="@+id/original_comment_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:background="#e5e5e5"/>
    </LinearLayout>
</RelativeLayout>