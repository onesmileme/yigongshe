<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@drawable/selector_pop_menu_bg"
        >
    <ImageView
            android:id="@+id/iv_wenyou_pop_all"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/selector_icon_wenyou_pop_all"/>
    <TextView
            android:id="@+id/tv_wenyou_pop_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/iv_wenyou_pop_all"
            android:textColor="@drawable/selector_wenyou_pop_font"
            android:textSize="16sp"
            android:text="全部"
            />
    <TextView
            android:id="@+id/tv_wenyou_pop_all_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textSize="12sp"
            android:text="50"
            android:textColor="@color/white"
            android:visibility="invisible"
            android:background="@drawable/bg_fans_count" />

    <ImageView
            android:id="@+id/iv_pop_menu_item_split"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:src="#555555"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true"/>
</RelativeLayout>