<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f5f5f5">
    <include
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_titlebar_height"
            layout="@layout/common_title_bar" />

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#ffffff"
            >

        <TableRow>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:text="+86"
                    android:textSize="15dp"
                    android:textColor="#333333"/>

            <EditText
                    android:id="@+id/forgot_password_cellphone_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1.0"
                    android:layout_marginLeft="15dp"
                    android:inputType="phone"
                    android:textSize="15dp"
                    android:textColor="#889aac"
                    android:hint="输入手机号"
                    android:textColorHint="#d2d2d2"
                    android:background="@android:color/transparent"/>

            <TextView
                    android:id="@+id/forgot_password_request_captcha_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingBottom="5dp"
                    android:text="获取验证码"
                    android:textSize="14dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/request_captcha_button_background"/>

        </TableRow>

        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e5e5e5"/>

        <TableRow>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:text="验证码"
                    android:textSize="15dp"
                    android:textColor="#333333"/>

            <EditText
                    android:id="@+id/forgot_password_captcha_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1.0"
                    android:layout_marginLeft="15dp"
                    android:inputType="phone"
                    android:textSize="15dp"
                    android:textColor="#889aac"
                    android:hint="输入验证码"
                    android:textColorHint="#d2d2d2"
                    android:background="@android:color/transparent"/>

        </TableRow>

    </TableLayout>

    <Button
            android:id="@+id/forgot_password_cellphone_next_step_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="下一步"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:background="@drawable/common_primary_button_background"/>


</LinearLayout>