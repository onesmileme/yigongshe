<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
>
    <View
            android:id="@+id/status_margin"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/news_titlebar_bg"
            android:visibility="gone"/>

    <com.weikan.app.common.widget.SimpleNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationTitleText="直播"
            app:navigationRightText="开始直播"
    />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/base_pull_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@android:color/transparent"/>

</LinearLayout>