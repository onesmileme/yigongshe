<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_titlebar_height"
    android:background="@color/news_titlebar_bg"
    tools:ignore="RtlHardcoded,RelativeOverlap,ContentDescription">

    <TextView
        android:id="@+id/tv_navigation_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"

        android:paddingLeft="@dimen/navigation_default_icon_padding"
        android:paddingRight="@dimen/navigation_default_icon_padding"

        android:includeFontPadding="false"
        android:textColor="@color/news_titlebar_text"
        android:textSize="@dimen/navigation_default_text_size"
        />

    <ImageView
        android:id="@+id/iv_navigation_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"

        android:paddingLeft="@dimen/navigation_default_icon_padding"
        android:paddingRight="@dimen/navigation_default_icon_padding"

        android:scaleType="center"
        tools:src="@drawable/ic_back"
        />

    <TextView
        android:id="@+id/tv_navigation_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"

        android:includeFontPadding="false"
        android:textSize="@dimen/navigation_default_title_text_size"
        android:textColor="@color/news_titlebar_text"

        tools:text="标题"
        />

    <ImageView
        android:id="@+id/iv_navigation_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"

        android:includeFontPadding="false"

        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_navigation_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_alignParentRight="true"
        android:gravity="center_vertical"

        android:paddingLeft="@dimen/navigation_default_icon_padding"
        android:paddingRight="@dimen/navigation_default_icon_padding"
        android:includeFontPadding="false"

        android:textColor="@color/news_titlebar_text"
        android:textSize="@dimen/navigation_default_text_size"

        tools:text="取消"/>

    <ImageView
        android:id="@+id/iv_navigation_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/navigation_default_icon_padding"
        android:paddingRight="@dimen/navigation_default_icon_padding"

        android:scaleType="center"
        android:visibility="gone"
        />

</RelativeLayout>