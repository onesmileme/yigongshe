<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_original_list_top_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_original_list_top_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="19dp"
            android:layout_marginTop="19dp"
            android:textColor="#999999"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/tv_original_list_top_divider"
            android:src="@drawable/icon_divider_star" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/tv_original_list_top_divider"
            android:src="@drawable/icon_divider_star" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            android:layout_toLeftOf="@+id/tv_original_list_top_divider"
            android:background="#dddddd" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/tv_original_list_top_divider"
            android:background="#dddddd" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/original_list_forward_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/original_list_forward_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textColor="#666666"
            android:textSize="12dp"
            tools:text="用户名" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="转发了"
            android:textColor="#aaaaaa"
            android:textSize="12dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.weikan.app.widget.roundedimageview.CircleImageView
                android:id="@+id/original_list_author_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/user_default"
                android:visibility="visible" />

            <TextView
                android:id="@+id/original_list_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textColor="#666666"
                android:textSize="12dp"

                tools:text="用户名" />
        </LinearLayout>

        <TextView
            android:id="@+id/original_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="刚刚"
            android:textColor="#aaaaaa"
            android:textSize="12dp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/original_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold"

        tools:text="看看内容的标题" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp">

        <com.weikan.app.widget.DynamicHeightSketchImageView
            android:id="@+id/original_list_content_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"

            tools:background="@color/white_smoke"
            tools:layout_height="300dp"
            tools:src="@drawable/background_people_information" />

        <ImageView
            android:id="@+id/iv_original_list_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:visibility="gone"

            tools:src="@drawable/icon_top1" />

        <ImageView
            android:id="@+id/iv_original_list_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            tools:src="@drawable/icon_cover_video" />

        <LinearLayout
            android:id="@+id/ll_voices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/original_list_content_icon"
            android:layout_alignLeft="@id/original_list_content_icon"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:visibility="gone">

            <com.weikan.app.widget.VoiceRecordView
                android:id="@+id/voice_0"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"

                />

            <com.weikan.app.widget.VoiceRecordView
                android:id="@+id/voice_1"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" />

            <com.weikan.app.widget.VoiceRecordView
                android:id="@+id/voice_2"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" />
        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/original_list_brief_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="111"
        android:textColor="#666666"
        android:textSize="13sp"

        tools:text="看看内容的介绍" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_tag"
                android:text="标签1"
                android:textSize="10sp" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/ll_original_list_share_icon"
                android:layout_width="wrap_content"
                android:layout_height="30dp">

                <ImageView
                    android:id="@+id/original_list_share_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/original_share" />

                <TextView
                    android:id="@+id/original_list_share_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:text="11"
                    android:textColor="#aaaaaa"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_original_list_comment_icon"
                android:layout_width="wrap_content"
                android:layout_height="30dp">

                <ImageView
                    android:id="@+id/original_list_comment_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/original_comment" />

                <TextView
                    android:id="@+id/original_list_comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:text="11"
                    android:textColor="#aaaaaa"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_original_list_praise_icon"
                android:layout_width="wrap_content"
                android:layout_height="30dp">

                <ImageView
                    android:id="@+id/original_list_praise_icon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/original_praise" />

                <TextView
                    android:id="@+id/original_list_praise_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:text="11"
                    android:textColor="#aaaaaa"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>