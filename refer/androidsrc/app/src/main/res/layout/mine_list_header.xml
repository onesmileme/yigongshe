<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:snap="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <ImageView
            android:id="@+id/iv_mine_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_bg"
            android:scaleType="centerCrop" />

        <com.weikan.app.widget.roundedimageview.CircleImageView
            android:id="@+id/iv_admin"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/user_default"
            tools:border_color="@color/white"
            tools:border_width="1dp" />

        <TextView
            android:id="@+id/tv_mine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_admin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            snap:text="阿斯蒂芬" />

        <ImageView
            android:id="@+id/iv_mine_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_mine_name"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/tv_mine_name"
            android:src="@drawable/icon_bluev_big"
            android:visibility="gone"
            snap:visibility="visible" />

        <ImageView
            android:id="@+id/iv_mine_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_mine_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/iv_mine_v"
            android:src="@drawable/icon_male" />

        <ImageView
            android:id="@+id/iv_mine_cons"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignTop="@+id/tv_mine_name"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/iv_mine_sex"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_mine_name"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mine_office"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone"
                snap:text="程序员"
                snap:visibility="visible" />

            <TextView
                android:id="@+id/tv_mine_addr"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone"
                snap:text="乌鲁木齐"
                snap:visibility="visible" />

            <TextView
                android:id="@+id/tv_mine_des"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="个性签名：无签名，不个性"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone"
                snap:visibility="visible" />

        </LinearLayout>
    </RelativeLayout>

