<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f5f5f5">
    <include
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_titlebar_height"
            layout="@layout/common_title_bar"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:orientation="vertical">

        <EditText
                android:id="@+id/accountpwd_edittext_pwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:lines="1"
                android:inputType="textPassword"
                android:textSize="15dp"
                android:textColor="#889aac"
                android:hint="@string/commen_input_hint_password"
                android:textColorHint="#d2d2d2"
                android:background="@android:color/transparent"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e5e5e5"/>

        <EditText
                android:id="@+id/accountpwd_edittext_pwdconfirm"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:lines="1"
                android:inputType="textPassword"
                android:textSize="15dp"
                android:textColor="#889aac"
                android:hint="@string/commen_input_hint_confirmpassword"
                android:textColorHint="#d2d2d2"
                android:background="@android:color/transparent"/>

    </LinearLayout>

    <TextView
            android:id="@+id/accountpwd_textview_confirm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/common_primary_button_background"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/font_medium_2"/>

</LinearLayout>