<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_container"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:gravity="center"
      android:text="@string/share_to" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="16dp"
      android:paddingTop="16dp">

      <LinearLayout
        android:id="@+id/ll_wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
          android:id="@+id/btn_wechat"
          android:layout_width="60dip"
          android:layout_height="60dip"
          android:src="@drawable/btn_share_wechat" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:text="@string/wechat" />
      </LinearLayout>

      <LinearLayout
        android:id="@+id/ll_wechat_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
          android:id="@+id/btn_wechat_circle"
          android:layout_width="60dip"
          android:layout_height="60dip"
          android:src="@drawable/btn_share_wechat_circle" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:text="@string/wechat_circle" />
      </LinearLayout>

      <LinearLayout
        android:id="@+id/ll_sinaweibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
          android:id="@+id/btn_sinaweibo"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:src="@drawable/btn_share_wechat_circle" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:text="@string/sinaweibo" />
      </LinearLayout>

    </LinearLayout>
  </LinearLayout>

</RelativeLayout>