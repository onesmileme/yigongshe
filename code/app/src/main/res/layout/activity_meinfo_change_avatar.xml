<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.ygs.android.yigongshe.view.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:centerText="@string/change_avatar"
        titlebar:centerType="textView"
        titlebar:leftDrawable="@drawable/arrow_back"
        titlebar:leftType="imageButton"></com.ygs.android.yigongshe.view.CommonTitleBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <com.ygs.android.yigongshe.view.CircleImageView
            android:layout_width="173dp"
            android:layout_height="173dp"
            android:id="@+id/avatar_iv"
            android:layout_gravity="center_horizontal"
            android:contentDescription="avatar"
            />
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/round_btn_shape"
            android:textColor="@color/white"
            android:text="@string/modify"
            android:textSize="12dp"
            android:id="@+id/change_avatar_submit_btn"
            />

    </LinearLayout>

</LinearLayout>