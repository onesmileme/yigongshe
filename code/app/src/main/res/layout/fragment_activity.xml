<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:titlebar="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <com.ygs.android.yigongshe.view.CommonTitleBar
    android:id="@+id/titleBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    titlebar:centerText="活动"
    titlebar:centerType="textView"
    titlebar:fillStatusBar="true"
    titlebar:leftCustomView="@layout/view_location"
    titlebar:leftType="customView"></com.ygs.android.yigongshe.view.CommonTitleBar>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/activity_banner_layout"
      android:orientation="vertical"
      android:background="@color/green"/>

  <android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
      android:id="@+id/rv_list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white" />
  </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>