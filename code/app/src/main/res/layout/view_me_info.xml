<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <com.ygs.android.yigongshe.view.CircleImageView
        android:id="@+id/me_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="13dp"
        android:background="@color/colorPrimary"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/me_name_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/me_avatar"
        android:layout_marginLeft="10dp"
        app:layout_constraintRight_toLeftOf="@id/me_info_indicator"
        android:layout_marginRight="20dp"
        android:layout_marginTop="23dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/black1"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/me_phone_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/gray2"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="@id/me_name_tv"
        app:layout_constraintRight_toLeftOf="@id/me_info_indicator"
        app:layout_constraintTop_toBottomOf="@id/me_name_tv"
        android:layout_marginRight="20dp"
         />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/me_info_indicator"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="33dp"
        android:src="@drawable/arrow_next"
        />
    
</android.support.constraint.ConstraintLayout>