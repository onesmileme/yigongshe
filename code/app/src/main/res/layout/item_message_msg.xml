<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white">

    <View
        android:id="@+id/msg_red_dot"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginLeft="14dp"
        android:background="@drawable/circle_10dp_ff0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ygs.android.yigongshe.view.CircleImageView
        android:id="@+id/msg_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/msg_red_dot"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/msg_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-2dp"
        android:text="@string/name"
        android:textColor="@color/gray1"
        android:textSize="12dp"
        app:layout_constraintEnd_toStartOf="@id/msg_detail_time_tv"
        app:layout_constraintStart_toEndOf="@id/msg_icon"
        app:layout_constraintTop_toTopOf="@id/msg_icon" />

    <TextView
        android:id="@+id/msg_detail_time_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="00:00"
        android:textColor="@color/gray2"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@id/msg_title_tv"
        app:layout_constraintEnd_toStartOf="@id/msg_detail_indicator"
        app:layout_constraintTop_toTopOf="@id/msg_title_tv" />

    <TextView
        android:id="@+id/msg_sub_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/gray2"
        android:textSize="10dp"
        app:layout_constraintEnd_toStartOf="@id/msg_detail_indicator"
        app:layout_constraintStart_toStartOf="@id/msg_title_tv"
        app:layout_constraintTop_toBottomOf="@id/msg_title_tv"
        tools:text="aaa" />

    <ImageView
        android:id="@+id/msg_detail_indicator"
        android:layout_width="8dp"
        android:layout_height="14dp"
        android:layout_marginRight="14dp"
        android:src="@drawable/arrow_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>