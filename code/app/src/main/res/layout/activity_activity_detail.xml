<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:titlebar="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <com.ygs.android.yigongshe.view.CommonTitleBar
    android:id="@+id/titleBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    titlebar:centerType="textView"
    titlebar:fillStatusBar="true"
    titlebar:leftType="imageButton"
    titlebar:rightCustomView="@layout/titlebar_right_activitydetail"
    titlebar:rightType="customView" />


  <android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/commentBar"
    android:layout_below="@id/titleBar"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
      android:id="@+id/rv_list"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  </android.support.v4.widget.SwipeRefreshLayout>


  <LinearLayout
    android:id="@+id/commentBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:orientation="horizontal">

    <EditText
      android:id="@+id/input_comment"
      android:layout_width="0dp"
      android:layout_height="30dp"
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="14dp"
      android:layout_marginTop="10dp"
      android:layout_weight="1"
      android:background="#f6f6f6"
      android:focusable="true"
      android:gravity="top|left"
      android:maxEms="512"
      android:padding="5dp"
      android:textSize="12dp" />

    <TextView
      android:id="@+id/sendText"
      android:layout_width="50dp"
      android:layout_height="30dp"
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="14dp"
      android:layout_marginTop="10dp"
      android:background="@color/colorPrimary"
      android:gravity="center"
      android:text="评论"
      android:textColor="@color/white"
      android:textSize="12dp" />

  </LinearLayout>

  <include
    layout="@layout/error_view"
    android:visibility="gone" />

  <include
    layout="@layout/loading_view"
    android:visibility="gone" />
</RelativeLayout>