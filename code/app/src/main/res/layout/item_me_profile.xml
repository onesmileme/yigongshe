<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/me_item_icon"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimary"
        />
    <TextView
        android:id="@+id/me_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/me_item_icon"
        app:layout_constraintRight_toLeftOf="@id/me_item_indicator"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="14dp"
        android:background="@color/white"
        android:textSize="12dp"
        android:textColor="@color/gray1"
        android:text="@string/user_type"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/me_item_indicator"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:src="@drawable/arrow_next"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:id="@+id/me_item_splitline"
        android:background="@color/gray2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/me_item_title"
        android:layout_marginLeft="41dp"
        />
</android.support.constraint.ConstraintLayout>