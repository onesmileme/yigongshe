<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView android:id="@+id/time_line"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#999999"
        tools:text="02-01 15:57"/>

    <RelativeLayout
        android:layout_below="@+id/time_line"
        android:id="@+id/rl_talk_item_left"
        android:layout_width="match_parent"
        android:layout_marginRight="50dp"
        android:layout_height="match_parent">
        <com.ygs.android.yigongshe.view.CircleImageView
            android:id="@+id/iv_talk_item_header_left"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/defalutavar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_talk_item_text_left"
            android:textColor="#333333"
            android:textColorLink="@android:color/holo_blue_dark"
            android:layout_toRightOf="@id/iv_talk_item_header_left"
            android:layout_alignTop="@+id/iv_talk_item_header_left"
            android:layout_marginLeft="10dp"
            android:gravity="left|center"
            android:textSize="15sp"
            android:typeface="sans"
            tools:text="ä»–"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/talk_his_2_bg"
            android:autoLink="web"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_talk_item_right"
        android:layout_below="@+id/time_line"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ygs.android.yigongshe.view.CircleImageView
            android:id="@+id/iv_talk_item_header_right"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/defalutavar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>


        <TextView
            android:id="@+id/tv_talk_item_text_right"
            android:textColor="#333333"
            android:textColorLink="@android:color/holo_blue_dark"
            android:layout_toLeftOf="@id/iv_talk_item_header_right"
            android:layout_alignTop="@+id/iv_talk_item_header_right"
            android:layout_marginRight="10dp"
            android:gravity="left|center"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:typeface="sans"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/talk_mine_2_bg"
            tools:text="asdfsadf"
            android:autoLink="web"/>

    </RelativeLayout>
</RelativeLayout>