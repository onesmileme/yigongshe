<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ygs.android.yigongshe.view.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:centerText="@string/change_avatar"
        titlebar:centerType="textView"
        titlebar:leftDrawable="@drawable/arrow_back"
        titlebar:leftType="imageButton"></com.ygs.android.yigongshe.view.CommonTitleBar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="@color/gray1"
            android:layout_gravity="center_vertical"
            android:text="@string/city1"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/apply_round_bg"
            android:layout_marginLeft="10dp"
            android:id="@+id/city_sp"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="@color/gray1"
            android:layout_gravity="center_vertical"
            android:text="@string/school"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/apply_round_bg"
            android:layout_marginLeft="10dp"
            android:id="@+id/school_sp"></Spinner>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/round_btn_shape"
        android:textColor="@color/white"
        android:text="@string/submit"
        android:textSize="12dp"
        android:id="@+id/change_school_submit_btn"
        />

</LinearLayout>