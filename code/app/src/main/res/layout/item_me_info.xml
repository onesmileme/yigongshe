<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/me_info_name_tv"
        android:textSize="12dp"
        android:textColor="@color/gray1"
        android:layout_marginLeft="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="hehe"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/my_info_indicator_iv"
        android:layout_marginRight="10dp"
        android:id="@+id/me_info_value_tv"
        android:textSize="12dp"
        android:textColor="@color/gray1"
        android:textAlignment="textEnd"
        android:text="xixi"
        />

    <com.ygs.android.yigongshe.view.CircleImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/me_info_avatar_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/my_info_indicator_iv"
        android:layout_marginRight="10dp"
        android:visibility="gone"/>
    
    <ImageView
        android:layout_width="8dp"
        android:layout_height="14dp"
        android:src="@drawable/arrow_next"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/my_info_indicator_iv"/>
    

</android.support.constraint.ConstraintLayout>