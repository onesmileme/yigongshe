<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:titlebar="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <com.ygs.android.yigongshe.view.CommonTitleBar
      android:id="@+id/titlebar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      titlebar:centerType="textView"
      titlebar:leftDrawable="@drawable/arrow_back"
      titlebar:leftType="imageButton"
      titlebar:rightType="textView"
      titlebar:rightText="@string/register"
      titlebar:rightTextColor="@color/green"
      titlebar:rightTextSize="12dp"
      app:layout_constraintTop_toTopOf="parent"
      ></com.ygs.android.yigongshe.view.CommonTitleBar>

  <TextView
    android:id="@+id/login_login_tip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:text="@string/login"
    android:textAlignment="center"
    android:textColor="@color/gray1"
    android:textSize="24dp"
    app:layout_constraintTop_toBottomOf="@id/titlebar" />

  <TextView
    android:id="@+id/login_phone_tip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="30dp"
    android:inputType="phone"
    android:text="@string/phone_num"
    android:textColor="@color/gray1"
    android:textSize="12dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/login_login_tip">

  </TextView>

  <EditText
    android:id="@+id/login_phone_et"
    android:layout_width="0dp"
    android:layout_height="30dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/register_round_bg"
    android:hint="@string/password"
    android:paddingLeft="10dp"
    android:textColor="@color/gray1"
    android:textSize="12dp"
    app:layout_constraintBaseline_toBaselineOf="@+id/login_phone_tip"
    app:layout_constraintLeft_toRightOf="@+id/login_phone_tip"
    app:layout_constraintRight_toRightOf="parent" />

  <TextView
    android:id="@+id/login_password_tip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:text="@string/input_password_hint"
    android:textColor="@color/gray1"
    android:textSize="12dp"
    app:layout_constraintLeft_toLeftOf="@+id/login_phone_tip"
    app:layout_constraintRight_toRightOf="@+id/login_phone_tip"
    app:layout_constraintTop_toBottomOf="@+id/login_phone_tip" />

  <EditText
    android:id="@+id/login_password_et"
    android:layout_width="0dp"
    android:layout_height="30dp"
    android:background="@drawable/register_round_bg"
    android:hint="@string/password"
    android:paddingLeft="10dp"
    android:textSize="12dp"
    app:layout_constraintBaseline_toBaselineOf="@+id/login_password_tip"
    app:layout_constraintLeft_toLeftOf="@+id/login_phone_et"
    app:layout_constraintRight_toRightOf="@+id/login_phone_et"

    />

  <Button
    android:id="@+id/login_forget_password_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:text="@string/forget_password_tip"
    android:textColor="@color/green"
    android:textSize="12dp"
    app:layout_constraintRight_toRightOf="@+id/login_password_et"
    app:layout_constraintTop_toBottomOf="@+id/login_password_et" />

  <Button
    android:id="@+id/login_login_btn"
    android:layout_width="0dp"
    android:layout_height="40dp"
    android:layout_marginTop="48dp"
    android:background="@drawable/round_btn_shape"
    android:text="@string/login"
    android:textColor="@color/white"
    android:textSize="14dp"
    app:layout_constraintLeft_toLeftOf="@+id/login_phone_tip"
    app:layout_constraintRight_toRightOf="@+id/login_phone_et"
    app:layout_constraintTop_toBottomOf="@+id/login_password_et" />

  <Button
    android:id="@+id/login_official_login_btn"
    android:layout_width="0dp"
    android:layout_height="40dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/borderline_buttonstyle"
    android:text="@string/use_official_account"
    android:textColor="@color/green"
    app:layout_constraintLeft_toLeftOf="@+id/login_login_btn"
    app:layout_constraintRight_toRightOf="@+id/login_login_btn"
    app:layout_constraintTop_toBottomOf="@+id/login_login_btn"

    />


</android.support.constraint.ConstraintLayout>