<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/login_login_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/login"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/login_phone_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_num"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/login_login_tip"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:inputType="phone">

    </TextView>

    <EditText
        android:id="@+id/login_phone_et"
        android:layout_height="44dp"
        android:layout_width="0dp"
        app:layout_constraintLeft_toRightOf="@+id/login_phone_tip"
        app:layout_constraintBaseline_toBaselineOf="@+id/login_phone_tip"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingLeft="10dp"
        android:hint="@string/password"
        android:textSize="20dp"
        android:background="@color/gray"
        />

    <TextView
        android:id="@+id/login_password_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        app:layout_constraintLeft_toLeftOf="@+id/login_phone_tip"
        app:layout_constraintRight_toRightOf="@+id/login_phone_tip"
        app:layout_constraintTop_toBottomOf="@+id/login_phone_tip"
        android:layout_marginTop="35dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/login_password_et"
        android:layout_width="0dp"
        android:layout_height="44dp"
        app:layout_constraintLeft_toLeftOf="@+id/login_phone_et"
        app:layout_constraintRight_toRightOf="@+id/login_phone_et"
        app:layout_constraintBaseline_toBaselineOf="@+id/login_password_tip"
        android:paddingLeft="10dp"
        android:hint="@string/password"
        android:background="@color/gray"
        android:textSize="20dp"

        />

    <Button
        android:id="@+id/login_forget_password_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/login_password_et"
        app:layout_constraintTop_toBottomOf="@+id/login_password_et"
        android:text="@string/forget_password_tip"
        android:textSize="12dp"
        android:background="#00FFFFFF"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/login_login_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/login_phone_tip"
        app:layout_constraintRight_toRightOf="@+id/login_phone_et"
        app:layout_constraintTop_toBottomOf="@+id/login_password_et"
        android:layout_marginTop="60dp"
        android:text="@string/login"
        android:textSize="22dp"
        android:background="@drawable/round_btn_shape"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/login_official_login_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/login_login_btn"
        app:layout_constraintRight_toRightOf="@+id/login_login_btn"
        app:layout_constraintTop_toBottomOf="@+id/login_login_btn"
        android:layout_marginTop="20dp"
        android:text="@string/use_official_account"
        android:background="@drawable/borderline_buttonstyle"
        android:textColor="@color/colorPrimary"

        />


</android.support.constraint.ConstraintLayout>