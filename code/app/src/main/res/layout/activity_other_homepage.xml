<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    xmlns:tools ="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray6">

    <com.ygs.android.yigongshe.view.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:centerText="@string/other_home"
        titlebar:centerType="textView"
        titlebar:leftDrawable="@drawable/arrow_back"
        titlebar:leftType="imageButton"
        app:layout_constraintTop_toTopOf="parent"
        ></com.ygs.android.yigongshe.view.CommonTitleBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/titlebar"
        android:background="@color/white"
        android:id="@+id/header_layout">

        <com.ygs.android.yigongshe.view.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/avatar_iv"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/black1"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:id="@+id/name_tv"
            android:text="Sundy"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:id="@+id/phone_tv"
            android:textColor="@color/gray2"
            android:textSize="12dp"
            android:text="18812345678"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/header_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/activity_layout">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:src="@drawable/me_activity" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="30"
                android:text="@string/ta_activity"
                android:textColor="@color/gray1"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="14dp"
                android:layout_weight="1"
                android:src="@drawable/arrow_next" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:background="@color/gray6"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/circle_layout">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:src="@drawable/me_charity_circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="30"
                android:text="@string/ta_yidong_circle"
                android:textColor="@color/gray1"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="14dp"
                android:layout_weight="1"
                android:src="@drawable/arrow_next" />

        </LinearLayout>


    </LinearLayout>

    
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/send_msg_btn"
        android:textSize="14dp"
        android:textColor="@color/green"
        android:text="@string/send_msg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/round_line_btn_shape"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/follow_btn"
        android:textSize="14dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/send_msg_btn"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/follow"
        android:background="@drawable/round_btn_shape"/>
    

    
    
</android.support.constraint.ConstraintLayout>